<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <fr.irit.geotablet_interactions.common.MyMapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:clickable="false" >
    </fr.irit.geotablet_interactions.common.MyMapView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                style="@style/CellStyle"
                android:text="1" />

            <TextView
                style="@style/CellStyle"
                android:text="2" />

            <TextView
                style="@style/CellStyle"
                android:text="3" />
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                style="@style/CellStyle"
                android:text="4" />

            <TextView
                style="@style/CellStyle"
                android:text="5" />

            <TextView
                style="@style/CellStyle"
                android:text="6" />
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                style="@style/CellStyle"
                android:text="7" />

            <TextView
                style="@style/CellStyle"
                android:text="8" />

            <TextView
                style="@style/CellStyle"
                android:text="9" />
        </TableRow>

        <TableRow
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                style="@style/CellStyle"
                android:text="10" />

            <TextView
                style="@style/CellStyle"
                android:text="11" />

            <TextView
                style="@style/CellStyle"
                android:text="12" />
        </TableRow>
    </TableLayout>

</RelativeLayout>